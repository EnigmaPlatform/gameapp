<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/neon_blue</item>
        <item name="colorPrimaryDark">@color/neon_blue_dark</item>
        <item name="colorAccent">@color/neon_blue</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/neon_blue</item>
    </style>
    
    <style name="NeonButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/neon_blue</item>
        <item name="android:background">@drawable/neon_border</item>
    </style>
    
    <style name="NeonProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
    </style>
    
    <style name="NeonDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/neon_blue</item>
        <item name="colorAccent">@color/neon_blue</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/neon_blue</item>
        <item name="android:textColor">@color/neon_blue</item>
        <item name="buttonBarPositiveButtonStyle">@style/NeonButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/NeonButton</item>
    </style>
</resources>
